{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "userAssignedManagedIdentityId": {
            "type": "string",
            "metadata": {
                "description": "Id of User Assigned Managed Identity with Contributor permissions on RG"
            }
        },
        "userAssignedManagedIdentityName": {
            "type": "string",
            "metadata": {
                "description": "Name of User Assigned Managed Identity with Contributor permissions on RG"
            }
        },
        "aroClusterName": {
            "type": "string",
            "metadata": {
                "description": "Name of ARO cluster"
            }
        },
        "bigipMgmtAddress": {
            "type": "string",
            "metadata": {
                "description": "Public IP or DNS address of BIG-IP"
            }
        },
        "bigIpMgmtPassword": {
            "type": "secureString",
            "metadata": {
                "description": "Password of BIG-IP"
            }
        },
        "privateExternalVirtualIpAddress0": {
            "type": "string",
            "metadata": {
                "description": "Private IP of VIP on BIG-IP for route-vserver-addr"
            }
        },
        "privateInternalSelfIpAddressFloat": {
            "type": "string",
            "metadata": {
                "description": "Internal Float IP of BIG-IP"
            }
        },
        "customDomain": {
            "type": "string",
            "metadata": {
                "description": "Custom Domain Name. Point this domain to the IP address that is output by this deployment."
            }
        },
        "primaryScriptUri": {
            "type": "string",
            "metadata": {
                "description": "URI for script to run"
            }
        },
        "baseUrl": {
            "type": "string",
            "metadata": {
                "description": "BASE_URL env variable for script"
            }
        },
        "branch": {
            "type": "string",
            "metadata": {
                "description": "BRANCH env variable for script"
            }
        }
    },
    "variables":{
        "containerGroupName": "[concat(parameters('aroClusterName'), '-containerGroup')]",
        "primaryScriptUri": "[parameters('primaryScriptUri')]"
        },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2018-09-01-preview",
            "name": "[guid(resourceGroup().id, deployment().name)]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                "principalId": "[parameters('userAssignedManagedIdentityId')]"
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2019-10-01-preview",
            "name": "runDeploymentScript",
            "dependsOn": [
                "[guid(resourceGroup().id, deployment().name)]"
            ],
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI", // or  "AzurePowerShell"
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('userAssignedManagedIdentityName'))]": {}
                }
            },
            "properties": {
                "forceUpdateTag": 1,
                "containerSettings": {
                    "containerGroupName": "[variables('containerGroupName')]"
                },
                "azCliVersion": "2.9.1",   // or  "azPowerShellVersion": "3.0"
                "environmentVariables": [
                    {
                        "name": "BIGIP_MGMT_PASSWORD",
                        "secureValue": "[parameters('bigIpMgmtPassword')]"
                    },
                    {
                        "name": "BASE_URL",
                        "value": "[parameters('baseUrl')]"
                    },
                    {
                        "name": "BRANCH",
                        "value": "[parameters('branch')]"
                    }
                ],  
                "arguments": "[concat(parameters('aroClusterName'), ' ', resourceGroup().name, ' ', parameters('bigipMgmtAddress'), ' ', parameters('privateExternalVirtualIpAddress0'), ' ', parameters('privateInternalSelfIpAddressFloat'), ' ', parameters('customDomain'))]",
                "primaryScriptUri": "[variables('primaryScriptUri')]",
                "supportingScriptUris":[],
                "timeout": "PT30M",
                "cleanupPreference": "OnExpiration",
                "retentionInterval": "P1D"
            }
        }
    ],
    "outputs":{
        "aro_api_server": {
            "type": "string",
            "value": "[reference('runDeploymentScript').outputs.aro_api_server]"
        },
        "aro_console_url": {
            "type": "string",
            "value": "[reference('runDeploymentScript').outputs.aro_console_url]"
        },  
        "aro_username": {
            "type": "string",
            "value": "[reference('runDeploymentScript').outputs.aro_username]"
        },   
        "aro_password": {
            "type": "string",
            "value": "[reference('runDeploymentScript').outputs.aro_password]"
        }
    }
}